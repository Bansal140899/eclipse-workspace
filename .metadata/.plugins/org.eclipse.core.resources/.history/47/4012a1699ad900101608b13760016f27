package com.ajaysoft.a;

public class fisrtandlast {
	public static void main(String[] args) {
		int arr[] = {1  ,2,3,4,5, 7,7,8 ,7 ,7, 7};
		int n = arr.length;
		int number = 7;
		int start = arr[0];
		int end = arr[arr.length];
		int first ;
		int last ;
		
	 while(start<=end) {
		 if(arr[start] == number) {
			 first = start;
			 break;
			 
		 }
		 start++;
	 } 
	 while(start<=end) {
		 if(arr[end] == number) {
			 last = end;
			 break;
			 
		 }
		 end--;
	 }
	 
	 System.out.println("fisrt acouarnce is the "+first);
	 System.out.println("fisrt acouarnce is the "+last);
	}

}
