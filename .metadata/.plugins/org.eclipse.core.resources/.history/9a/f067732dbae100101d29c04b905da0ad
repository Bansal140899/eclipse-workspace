package com.Servlet;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;

import java.io.IOException;

import com.DAO.PostDao;
import com.db.DBConnect;


@WebServlet("/NoteEditServlet")
public class NoteEditServlet extends HttpServlet {
	

	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

		
		
		
		try {
			Integer noteid = Integer.parseInt(request.getParameter("noteid"));
			String title = request.getParameter("title");
			String content = request.getParameter("content");
			
			
			
			PostDao ps = new PostDao(DBConnect.getConn());
			
			boolean f = ps.PostUpdate(noteid, title, content);
			
			if(f) {
				System.out.println("data is update is succesfully");
				response.sendRedirect("showNotes.jsp");
				HttpSession session =  request.getSession();
				session.setAttribute("updatemsg", "notes update succefully");
				
			}else {
				System.out.println("data is not succesfully");
			}
			
			
		}catch(Exception e) {
			e.printStackTrace();
		}
		
		
		
		
		
		
		
		
	}

}
