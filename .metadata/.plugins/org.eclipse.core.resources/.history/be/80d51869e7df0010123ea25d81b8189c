package com.ajaysoft.a;

// Node class
class Node {
    int data;
    Node next;

    Node(int data) {
        this.data = data;
        this.next = null;
    }
}

// Linked List class
class MyLinkedList {

    Node head;
    Node tail;

    // insert at beginning
    void insert_first(int data) {

        Node newNode = new Node(data);

        if (head == null) {
            head = newNode;
            tail = newNode;
            return;
        }

        newNode.next = head;
        head = newNode;
    }

    // insert at last
    void insert_last(int data) {

        Node newNode = new Node(data);

        if (head == null) {
            head = newNode;
            tail = newNode;
            return;
        }

        tail.next = newNode;
        tail = newNode;
    }

    // print list
    void printList() {
        Node temp = head;

        while (temp != null) {
            System.out.print(temp.data + " ");
            temp = temp.next;
        }
        System.out.println();
    }
}

// Main class
public class Linked_List {
    public static void main(String[] args) {

        MyLinkedList l1 = new MyLinkedList();

        l1.insert_last(10);
        l1.insert_last(20);
        l1.insert_last(30);

        l1.insert_first(5);

        l1.printList();
    }
}
